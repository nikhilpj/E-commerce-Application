<script>
	$("#checkout-form1").submit((e) => {
		e.preventDefault()
		$.ajax({
			url: '/order',
			method: 'post',
			data: $('#checkout-form1').serialize(),
			success: (response) => {
				alert("order has been placed succesfully")
				if(response.status)
				{
					location.href='/checkout'
				}
			},

		})
	})
</script>
