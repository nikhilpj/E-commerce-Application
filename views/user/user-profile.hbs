<div class="container">
    <div class="main ">
    <div class="row">
        <div class="col-md-4 mt-1">
            <div class="card text-center sidebar">
                <div class="card-body">
                    <img src="/eshop/eshop/images/profile.png" class="rounded-circle" width="120">
                    <div class="mt-3">
                        
                        <h3>user id : {{user._id}}</h3>
                        <br>
                        <a href="/add-address">Add Address</a>
                        {{!-- <a href="/view-address">View Address</a> --}}
                        <a href="/view-orders">View Orders</a>
                        <a href="/logout">Logout</a>
                    </div>
                </div>

            </div>

        </div>

        <div class="col-md-8 mt-5 mb-1">
            <div class="card mb-3 content">
                <h1 class="m-3 pt-3 text-center"></h1>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3">
                            <h5>Full Name</h5>
                        </div>
                        <div class="col-md-9 " style="font-size:large;">
                            {{user.firstname}} {{user.lastname}}
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-md-3">
                            <h5>Email</h5>
                        </div>
                        <div class="col-md-9 " style="font-size:large;">
                            {{user.email}}
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-md-3">
                            <h5>Phone no</h5>
                        </div>
                        <div class="col-md-9 " style="font-size:large;">
                            {{user.phone}}
                        </div>
                    </div>
                    <hr>
                    <hr>
                    <div class="row">
                        <div class="col-md-3">
                            <h5>Address</h5>
                        </div>
                        <div class="col-md-9 " style="font-size:large;">
                            {{#each user.address}}
                            {{#if this.status}}
                            {{!-- {{ #eq @index 0}} --}}
                             {{this.address}} {{this.country}} 
                             
                             
                             {{/if}}
                             {{!-- {{#eq}} --}}
                            {{/each}}
                        </div>
                    </div>
                    <hr>
                    <hr>
                    <div class="row">
                        <div class="col-md-3">
                            <h5>Pincode</h5>
                        </div>
                        <div class="col-md-9 " style="font-size:large;">
                            {{#each user.address}}
                            {{#if this.status}}
                             {{this.pincode}} 
                             {{/if}}
                            {{/each}}
                        </div>
                    </div>
                    <hr>
                </div>
            </div>
        </div>
    </div>
    </div>
</div>

